<p id="notice"><%= notice %></p>
<h1>Admins</h1>


<p><%= link_to 'Members', users_path %>   <%= link_to 'New Admin', new_user_path %></p>

<table>
  <thead>

  <tr>
    <th>Name</th>
    <th>Email</th>


    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <% if user.privilege!='Member'%>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <% if user.privilege=='SAdmin'%>
          <td><strong>Super Admin</strong></td>
        <% end %>

        <% if (user.privilege!=current_user.privilege and user.privilege!="SAdmin") %>
          <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      <%end%>
      </tr>
  <% end %>
  </tbody>
</table>