<p id="notice"><%= notice %></p>

<h1>Rooms</h1>


<% if current_user.privilege != 'Member' %>
<table>
  <thead>
    <tr>
      <th>Size</th>
      <th>Number</th>
      <th>Vacant</th>
      <th>Building</th>


      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.size %></td>
        <td><%= room.number %></td>
        <td><%= room.vacant %></td>
        <td><%= room.building %></td>

        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room', new_room_path %>
<% else %>

    <table>
      <thead>
      <tr>
        <th>Size</th>
        <th>Number</th>
        <th>Vacant</th>
        <th>Building</th>

        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @rooms.each do |room| %>
          <tr>
            <td><%= room.size %></td>
            <td><%= room.number %></td>
            <td><%= room.vacant %></td>
            <td><%= room.building %></td>
            <td><%= link_to 'Show', room %></td>
          </tr>

      <% end %>
      </tbody>
    </table>

<% end %>